<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Простая форма заказа</title>
</head>
<body>
    <div class="container">
        <h1>Оформление заказа</h1>
        <form action="/submit" method="post">
          <label for="name">Ваше имя:</label>
          <input type="text" id="name" name="name" required>
          <br>
          <label for="phone">Номер телефона (в формате +7(777)777-77-77):</label>
          <input type="tel" id="phone" name="phone" pattern="\+\d{1,3}\(\d{3}\)\d{3}-\d{2}-\d{2}" required>
          <br>
          <input type="hidden" name="hiddenField" value="<%= hiddenFieldValue %>">
          <button type="submit">Отправить заказ</button>
        </form>
      </div>
</body>
</html>
